# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Player {
  id: ID!
  name: String!
  shortName: String!
  email: String
  elo: Float!
  experiennce: Int!
}

type Game {
  id: ID!
  loser: Player!
  winner: Player!
  length: Int!
}

type Query {
  player(id: Int!): Player!
  players(limit: Int!, offset: Int!): [Player!]!
  games(limit: Int!, offset: Int!): [Game!]!
}

type Mutation {
  addPlayer(name: String!): Player!
}

